# general #
###########

# font
font pango:MesloLGS NF 16px

# megasync
exec --no-startup-id /usr/bin/megasync

exec --no-startup-id /usr/bin/nm-applet

# dunst (notifications)
exec --no-startup-id dbus-launch dunst
# exec --no-startup-id dbus-launch dunst --config $HOME/.config/dunst/dunstrc

# transparency
exec --no-startup-id /usr/bin/picom -b

# wallpaper
exec_always --no-startup-id $HOME/.config/i3/wallpaper.sh 

# polybar
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# i3bar
#  bar {
#          status_command i3status
